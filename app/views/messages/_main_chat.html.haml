.chat-main
  .chat-main__group-info
    .top-box-left
      .top-box-left__groups
        = @group.name
      .top-box-left__member
        member :
        .member-list
          - @group.users.each do |user|
            = user.name

    .top-box-right
      = link_to edit_group_path(@group), class: "top-box-right__edit" do
        Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: "form-box", placeholder: "type a message"
      .form-box__image
        = f.label :image, class: "form-box__image" do
          = icon('far', 'image')
          = f.file_field :image, class: "form-box__file"
      = f.submit 'Send', class: 'send-btn'
