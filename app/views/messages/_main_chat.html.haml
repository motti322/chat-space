.chat-main
  .chat-main__group-info
    .top-box-left
      .top-box-left__groups
        = @group.name
      .top-box-left__member
        member :
        .member-list
          - @group.users.each do |user|
            = user.name

    .top-box-right
      = link_to edit_group_path(@group), class: "top-box-right__edit" do
        Edit
  .chat-main__message-list
    = render @messages

