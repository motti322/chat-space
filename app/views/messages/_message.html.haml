.message-box{data: {message: {id:message.id}}}
  .message-box__name
    = message.user.name
  .message-box__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
- if message.content.present?
  .chat
    = message.content
= image_tag message.image.url, class: 'lower-message__image' if message.image.present?